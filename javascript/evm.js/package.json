{
  "name": "@switchboard-xyz/evm.js",
  "description": "API wrapper for intergating with the Switchboardv2 program on our EVM implementation",
  "version": "3.12.13",
  "license": "MIT",
  "files": [
    "lib",
    "src",
    "contracts",
    "package.json"
  ],
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/cjs/index.d.ts",
  "scripts": {
    "build:cjs": "pnpm exec tsc -p tsconfig.cjs.json",
    "build:esm": "pnpm exec tsc",
    "build": "pnpm exec shx rm -rf lib || true; pnpm run build:cjs && pnpm run build:esm",
    "watch": "pnpm exec tsc -p tsconfig.cjs.json --watch",
    "prepack": "pnpm exec eslint --fix ./src ./tests && pnpm run lint && pnpm run build",
    "test": "pnpm exec ts-mocha -p ./tsconfig.cjs.json --require ts-node/register -t 1000000 ./tests/*.tests.ts",
    "lint": "pnpm exec eslint src",
    "fix": "pnpm exec eslint --fix src",
    "clean": "pnpm exec rimraf node_modules lib .turbo",
    "bindings": "pnpm run cp-sb-bindings && pnpm run cp-sbp-bindings",
    "cp-sb-bindings": "cp -r ../../chains/evm/contracts/Switchboard/typechain-types ./src/switchboard-types/",
    "cp-sbp-bindings": "cp -r ../../chains/evm/contracts/SwitchboardPushReceiver/typechain-types ./src/switchboard-push-types/"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bignumber": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@switchboard-xyz/common": "^2.3.0",
    "chalk": "^5.0.1",
    "ethers": "^5.7.2",
    "js-sha3": "^0.8.0",
    "node-fetch": "^2.1.6"
  },
  "devDependencies": {
    "cargo-cp-artifact": "^0.1",
    "@ethersproject/bytes": "^5.0.0",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.7",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.4",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.8.0",
    "@switchboard-xyz/eslint-config": "latest",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/big.js": "^6.1.6",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.6.4",
    "@types/node-fetch": "^2.6.2",
    "chai": ">=4.2.0 <5.0.0",
    "ethereum-waffle": "^3.2.0",
    "hardhat": "^2.12.5",
    "hardhat-gas-reporter": "^1.0.9",
    "mocha": "^10.1.0",
    "solidity-coverage": "^0.8.2",
    "ts-mocha": "^10.0.0",
    "typechain": "^8.1.1",
    "yaml": "^2.1.1"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
